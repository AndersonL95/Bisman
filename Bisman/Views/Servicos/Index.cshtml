@model IEnumerable<Bisman.Models.Servico>

@{
    ViewData["Title"] = "Serviços";
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<h3>@ViewData["Title"]</h3>
<br />
<p>
    <a class="btn btn-primary" style="border-style:hidden; color:aliceblue; background-color:darkslateblue" asp-action="Create">Cadastrar Serviço</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                   R$ @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    <!--<a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |-->
                    <button type="button" class="btn btn-primary" aria-label="Alinhar na esquerda" asp-action="Delete" asp-route-id="@item.Id">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-primary" aria-label="Alinhar na esquerda" asp-action="Delete" asp-route-id="@item.Id">
                        <span class="glyphicon glyphicon-floppy-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
