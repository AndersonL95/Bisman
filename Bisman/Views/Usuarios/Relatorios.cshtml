@{
    ViewData["Title"] = "Relatórios";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscarProdutos">
            <fieldset>
                <legend>Buscar Produtos</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-4 control-label">Data Inicial:</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" placeholder="Data Inicial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-4 control-label">Data Final:</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" placeholder="Data Final" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="BuscarServicos">
            <fieldset>
                <legend>Buscar Serviços</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-4 control-label">Data Inicial:</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" placeholder="Data Inicial" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-4 control-label">Data Final:</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" placeholder="Data Final" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>